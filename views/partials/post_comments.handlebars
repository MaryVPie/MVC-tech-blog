{{!-- {{log 'comments' comments}} --}}

{{#each comments as |comment|}}
<div class="row px-5 pt-2 pb-5">
  <div class="col-12">
    <div class="card">
      <div class="card-header bg-dark text-light">
               &nbsp;
      </div>
      <div class="card-body">

         <div class="row">
           <div class="col-12">
              <p class="card-text ">{{comment.content}}</p>
           </div>
         </div>
          <div class="row">
           <div class="col-12 text-start">
               - {{comment.user.username}}, {{format_date comment.dateCreated}} 
           </div>
         </div>        
      </div>
    </div>
  </div>
</div>
{{/each}}